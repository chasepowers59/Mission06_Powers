@{
    ViewData["Title"] = "Enter Movies Into The Collection";
}
@model Mission06_Powers.Models.Movies

<div class="container py-4" style="max-width: 720px;">
    <h1 class="display-6 mb-3">Enter a Movie</h1>
    <p class="text-muted mb-4">Add a new movie to Joel’s collection.</p>

    <form asp-action="EnterMovies" method="post" class="card p-4 shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input asp-for="MovieID" type="hidden" />
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
            
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId"
                    class="form-select"
                    asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))"> 
                <option value="">-- Select --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" type="number" min="1888" max="2100" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Director" class="form-label"></label>
            <input asp-for="Director" class="form-control" />
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Rating" class="form-label"></label>
            <select asp-for="Rating" class="form-select">
                <option value="">-- Select --</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="NR">NR</option>
                <option value="UR">UR</option>
                <option value="TV-PG">TV-PG</option>
                <option value="TV-14">TV-14</option>
                <option value="TV-Y7">TV-Y7</option>
                <option value="TV-G">TV-G</option>
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <!-- REQUIRED by mission -->
        <div class="mb-3">
            <label asp-for="Edited" class="form-label">Edited?</label>
            <select asp-for="Edited" class="form-select">
                <option value="">-- Select --</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="Edited" class="text-danger"></span>
        </div>

        <!-- REQUIRED by mission -->
        <div class="mb-3">
            <label asp-for="CopiedToPlex" class="form-label">Copied to Plex?</label>
            <select asp-for="CopiedToPlex" class="form-select">
                <option value="">-- Select --</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LentTo" class="form-label"></label>
            <input asp-for="LentTo" class="form-control" />
            <span asp-validation-for="LentTo" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Notes" class="form-label"></label>
            <input asp-for="Notes" class="form-control" maxlength="25" />
            <div class="form-text">Max 25 characters.</div>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit Movie</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
