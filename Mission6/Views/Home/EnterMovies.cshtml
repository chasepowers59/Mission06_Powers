@{
    ViewData["Title"] = "Enter Movies Into The Collection";
}
@model Mission06_Powers.Models.Movies

<div class="container py-4" style="max-width: 720px;">
    <h1 class="display-6 mb-3">@(Model?.MovieID > 0 ? "Edit Movie" : "Enter a Movie")</h1>
    <p class="text-muted mb-4">@(Model?.MovieID > 0 ? "Update an existing movie in" : "Add a new movie to") Joel's collection.</p>

    <form asp-action="EnterMovies" method="post" class="card p-4 shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        @* Only include MovieID if editing *@
        @if (Model?.MovieID > 0)
        {
            <input asp-for="MovieID" type="hidden" />
        }

        <!-- REQUIRED FIELD -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label"><span class="text-danger">*</span> Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- REQUIRED FIELD -->
        <div class="mb-3">
            <label asp-for="Year" class="form-label"><span class="text-danger">*</span> Year</label>
            <input asp-for="Year" class="form-control" type="number" min="1888" max="2100" required />
            <span asp-validation-for="Year" class="text-danger"></span>
            <div class="form-text">Must be 1888 or later.</div>
        </div>

        <!-- REQUIRED FIELD -->
        <div class="mb-3">
            <label asp-for="Edited" class="form-label"><span class="text-danger">*</span> Edited?</label>
            <select asp-for="Edited" class="form-select" required>
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
            <span asp-validation-for="Edited" class="text-danger"></span>
        </div>

        <!-- REQUIRED FIELD -->
        <div class="mb-3">
            <label asp-for="CopiedToPlex" class="form-label"><span class="text-danger">*</span> Copied to Plex?</label>
            <select asp-for="CopiedToPlex" class="form-select" required>
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
            <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
        </div>

        <hr class="my-4" />
        <h6 class="text-muted mb-3">Optional Information</h6>

        <!-- OPTIONAL FIELD  use teh viewbag we made in the controller here to SHOW the values in the table-->
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId"
                    class="form-select"
                    asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))">
                <option value="">-- Not Specified --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- OPTIONAL FIELD -->
        <div class="mb-3">
            <label asp-for="Director" class="form-label">Director</label>
            <input asp-for="Director" class="form-control" />
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <!-- OPTIONAL FIELD -->
        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Rating</label>
            <select asp-for="Rating" class="form-select">
                <option value="">-- Not Specified --</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="NR">NR</option>
                <option value="UR">UR</option>
                <option value="TV-PG">TV-PG</option>
                <option value="TV-14">TV-14</option>
                <option value="TV-Y7">TV-Y7</option>
                <option value="TV-G">TV-G</option>
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <!-- OPTIONAL FIELD -->
        <div class="mb-3">
            <label asp-for="LentTo" class="form-label">Lent To</label>
            <input asp-for="LentTo" class="form-control" />
            <span asp-validation-for="LentTo" class="text-danger"></span>
        </div>

        <!-- OPTIONAL FIELD -->
        <div class="mb-4">
            <label asp-for="Notes" class="form-label">Notes</label>
            <input asp-for="Notes" class="form-control" maxlength="25" />
            <div class="form-text">Max 25 characters.</div>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                @(Model?.MovieID > 0 ? "Update Movie" : "Submit Movie")
            </button>
            <a asp-action="DisplayMovies" class="btn btn-secondary">Cancel</a>
        </div>

        <div class="mt-3">
            <small class="text-muted"><span class="text-danger">*</span> Required field</small>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}