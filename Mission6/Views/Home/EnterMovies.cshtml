@{
    ViewData["Title"] = "Enter Movies Into The Collection";
}
@model Mission06_Powers.Models.Application

<div class="container py-4" style="max-width: 720px;">
    <h1 class="display-6 mb-3">Enter a Movie</h1>
    <p class="text-muted mb-4">Add a new movie to Joel’s collection.</p>


    <form asp-action="EnterMovies" method="post" class="card p-4 shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="MovieName" class="form-label"></label>
            <input asp-for="MovieName" class="form-control" />
            <span asp-validation-for="MovieName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Director" class="form-label"></label>
            <input asp-for="Director" class="form-control" />
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Rating</label>
            <select asp-for="MovieRating" class="form-select" required>
                <option value="">-- Select --</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <span asp-validation-for="MovieRating" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Edited?</label>
            <select asp-for="IsEdited" class="form-select">
                <option value="">-- Select --</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="IsEdited" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LentTo" class="form-label"></label>
            <input asp-for="LentTo" class="form-control" />
            <span asp-validation-for="LentTo" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Notes" class="form-label"></label>
            <input asp-for="Notes" class="form-control" maxlength="25" />
            <div class="form-text">Max 25 characters.</div>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit Movie</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
