@model Movies

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container py-4" style="max-width: 820px;">
    <h2 class="mb-3">Delete Movie</h2>
    <p class="text-danger fw-semibold">
        Are you sure you want to delete this movie? This action cannot be undone.
    </p>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-sm table-bordered align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Rating</th>
                        <th class="text-end">Year</th>
                        <th>Director</th>
                        <th class="text-center">Copied To Plex?</th>
                        <th>Category</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="fw-semibold">@Model.Title</td>
                        <td>@(string.IsNullOrWhiteSpace(Model.Rating) ? "—" : Model.Rating)</td>
                        <td class="text-end">@Model.Year</td>
                        <td>@(string.IsNullOrWhiteSpace(Model.Director) ? "—" : Model.Director)</td>
                        <td class="text-center">
                            @if (Model.CopiedToPlex)
                            {
                                <span class="badge text-bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge text-bg-secondary">No</span>
                            }
                        </td>
                        <td>@(Model.Category?.CategoryName ?? "—")</td>
                        <td>@(string.IsNullOrWhiteSpace(Model.Notes) ? "—" : Model.Notes)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer d-flex gap-2">
            <form asp-action="Delete" asp-controller="Home" method="post" class="m-0">
                <input type="hidden" asp-for="MovieID" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="DisplayMovies">
                Cancel
            </a>
        </div>
    </div>
</div>
